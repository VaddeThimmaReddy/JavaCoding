import java.util.Scanner;
public class SquarePattern {

	public static void main(String[] args) {
		Scanner s = new Scanner(System.in);
		System.out.println("Enter a number : ");
		int num = s.nextInt();
		for(int i=0;i<num;i++) {
			for(int j=0;j<num;j++) {
				if(i==0 || i==(num-1)) {
					System.out.print(" *");
				}
				else if(j==0 || j==(num-1)) {
						System.out.print(" *");
					}
				else {
						System.out.print("  ");
				}
				
			}
			System.out.println("");
		}
	}
}
